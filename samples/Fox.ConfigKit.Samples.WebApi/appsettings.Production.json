{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Application": {
    "MaxConcurrentRequests": 500,
    "RequestTimeoutSeconds": 60,
    "EnableMetrics": true
  },
  "Database": {
    "ConnectionString": "Server=prod-db.example.com;Database=SampleDb_Prod;User Id=prod_user;Password=***REPLACE_WITH_SECURE_PASSWORD***;Encrypt=True",
    "CommandTimeoutSeconds": 30,
    "MaxPoolSize": 200,
    "EnableSensitiveDataLogging": false,
    "RequireSsl": true
  },
  "ExternalApi": {
    "BaseUrl": "https://api.example.com",
    "ApiKey": "***REPLACE_WITH_PRODUCTION_API_KEY***",
    "TimeoutSeconds": 30,
    "MaxRetries": 5
  },
  "CustomLogging": {
    "LogDirectory": "/var/log/configkit-sample",
    "MinimumLevel": "Warning",
    "RetentionDays": 90,
    "MaxFileSizeMB": 500
  },
  "Security": {
    "Environment": "Production",
    "CertificatePath": "/etc/ssl/certs/app-certificate.pfx",
    "CertificatePassword": "***REPLACE_WITH_CERT_PASSWORD***",
    "RequireHttps": true,
    "AllowedOrigins": [
      "https://app.example.com",
      "https://www.example.com"
    ]
  }
}
